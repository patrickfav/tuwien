<persistence xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
   <persistence-unit name="restframework">
    	<properties>
  	 		<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
  	 		<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/evs" />
   			<property name="hibernate.connection.username" value="evs" />
   			<property name="hibernate.connection.password" value="evs11" />
   			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect" />
   			<property name="hibernate.show_sql" value="false" />
   			<property name="hibernate.hbm2ddl.auto" value="create"/>
   			<property name="javax.persistence.validation.mode" value="none"/>
   			<!--  <property name="hibernate.ejb.interceptor" value="dst1.interceptor.SQLInterceptor"/>-->
   			
   		</properties>
   </persistence-unit>
</persistence>
